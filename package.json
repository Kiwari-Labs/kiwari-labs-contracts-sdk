{
  "name": "service-contracts",
  "version": "1.0.0",
  "description": "A Smart contract for multiple type of service on DLT-based Loyalty Platform",
  "main": "index.js",
  "repository": "https://github.com/Kiwari-Labs/monorepo-service-contracts.git",
  "author": {
    "name": "kiwari-labs",
    "email": "kiwarilabs@protonmail.com",
    "url": "https://github.com/Kiwari-Labs"
  },
  "license": "Apache-2.0",
  "private": true,
  "keywords": [
    "solidity",
    "smart contracts"
  ],
  "scripts": {
    "compile:campaign": "cd packages/campaign-service-contracts && npx hardhat compile",
    "compile:exchange": "cd packages/exchange-service-contracts && npx hardhat compile",
    "compile:token": "cd packages/token-service-contracts && npx hardhat compile",
    "coverage:campaign": "cd packages/campaign-service-contracts && npx hardhat coverage",
    "coverage:exchange": "cd packages/exchange-service-contracts && npx hardhat coverage",
    "coverage:token": "cd packages/token-service-contracts && npx hardhat coverage",
    "test:campaign": "cd packages/campaign-service-contracts && npx hardhat test",
    "test:exchange": "cd packages/exchange-service-contracts && npx hardhat test",
    "test:token": "cd packages/token-service-contracts && npx hardhat test",
    "deploy:prod:campaign": "ccd packages/campaign-service-contracts && npx hardhat ignition deploy --network production",
    "deploy:prod:exchange": "cd packages/exchange-service-contracts && npx hardhat ignition deploy --network production",
    "deploy:prod:token": "cd packages/token-service-contracts && npx hardhat ignition deploy --network production",
    "deploy:stg:campaign": "cd packages/campaign-service-contracts && npx hardhat ignition deploy --network staging",
    "deploy:stg:exchange": "cd packages/exchange-service-contracts && npx hardhat ignition deploy --network staging",
    "deploy:stg:token": "cd packages/token-service-contracts && npx hardhat ignition deploy --network staging"
  },
  "devDependencies": {
    "@kiwarilabs/contracts": "^1.0.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.4.0",
    "hardhat": "^2.22.9",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {}
}
